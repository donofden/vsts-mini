<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <rules>
      <rule name="RedirectToIndexPage" stopProcessing="true"> 
          <match url="^$" /> 
          <action type="Redirect" url="/index.html" appendQueryString="true" redirectType="Permanent" /> 
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>